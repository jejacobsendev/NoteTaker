@model NoteTaker.Models.Note

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<div>
    <h4>Card</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Text
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NoteText)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.NoteId">Edit</a> |
    <a asp-action="Index">Back to Notes</a>
</div>
